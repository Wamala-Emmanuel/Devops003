
@model Laboremus_AuthorizationService.Models.AccountViewModels.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<link href="~/css/signin.css" rel="stylesheet" />
<div id="forgot-password-form">

    <div class="forgot-password-heading">
        <h3 class="text-center title">NATIONAL ID VERIFICATION SYSTEM</h3>
        <p>Forgot your password? Enter the email associated with your account and we'll send an email with instructions to reset password.</p>
    </div>

    <form method="post" class="m-b" id="forgot-password-input">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group forgot-input m-b-sm">
            <input asp-for="Email" class="form-control" />
            <label id="email-label" asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="row m-t-lg last-item ">
            <div class="col-6 m-t-sm forgot-password-wrapper">
                <a class="go-back-signin"
                  id="go-back-signin">
                    Go back to sign in
                </a>

            </div>
            <div class="col-6 signin-wrapper">
                <button class="btn btn-outline btn-link submit-button" id="login-button-forgot" type="submit">SUBMIT</button>
            </div>
        </div>
    </form>
    
</div>


@section Scripts {
    <script src="~/lib/steps/jquery.steps.min.js"></script>
    <script src="~/js/forgot-password.js"></script>
    <partial name="_ValidationScriptsPartial" />
}